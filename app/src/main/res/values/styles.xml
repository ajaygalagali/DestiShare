<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        
    </style>

</resources>